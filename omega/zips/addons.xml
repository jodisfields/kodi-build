<?xml version="1.0" encoding="UTF-8"?>
<addons><addon id="plugin.program.jodisbuildwizard" name="Jodis Build Wizard" version="1.0.0" provider-name="jodisfields">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Build wizard for Fentastic/FenLight setup</summary>
        <description lang="en_GB">Installs and configures custom Kodi build featuring Fentastic skin, FenLight video addon, and CocoScrapers. Includes debrid service configuration, backup/restore functionality, and cache management.</description>
        <platform>all</platform>
        <license>GPL-3.0-only</license>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
        </assets>
    </extension>
</addon><addon id="repository.jodisfields" name="Jodisfields Repository" version="1.0.0" provider-name="jodisfields">
    <requires>
        <import addon="xbmc.addon" version="21.0.0" />
    </requires>
    <extension point="xbmc.addon.repository" name="Jodisfields Repository">
        <dir minversion="21.0.0">
            <info compressed="false">https://jodisfields.github.io/kodi-build/omega/zips/addons.xml</info>
            <checksum>https://jodisfields.github.io/kodi-build/omega/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://jodisfields.github.io/kodi-build/omega/zips/</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Jodisfields custom Kodi repository</summary>
        <description lang="en_GB">Contains build wizard for installing custom Kodi build with Fentastic skin, FenLight, and CocoScrapers preconfigured.</description>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon></addons>